package com.ict.edu;

public class Ex01 {
	public static void main(String[] args) {
		// 단순 if : 조건이 참일때만 실행, 거짓일때는 if문 무시
		// 조건식 : boolean, 비교연산, 논리연산
		// 형식 : if(조건식){
		// 조건식이 참일때 실행 문장;
		// 조건식이 참일때 실행 문장;
		// }
		// 단, 실행문장이 한 줄 일 때는 { } 생략가능

		// int k1이 60 이상이면 합격,
		int k1 = 59;
		String str = "초기값";
		if (k1 >= 60) {
			str = "합격";
		}
		System.out.println("결과 : " + str);
		System.out.println("수고하셨습니다.");

		// int k2이 60 이상이면 합격, 60점 미만은 불합격
		int k2 = 59;
		str = "초기값";
		if (k2 >= 60) {
			str = "합격";
		}
		if (k2 < 60) {
			str = "불합격";
		}
		System.out.println("결과 : " + str);
		
		// int k3이 60 이상이면 합격, 60점 미만은 불합격
		int k3 = 59;
		str = "불합격";
		if (k3 >= 60) {
			str = "합격";
		}
		System.out.println("결과 : " + str);
		
		// 홀수 짝수 판별
		System.out.println("k4 ------------");
		int k4 = 7 ;
		str = "짝수";
		if(k4%2 == 1) {
			str = "홀수";
		}
		System.out.println("결과는 " + str);
		
		// 대소문자 판별
		System.out.println("k5 ------------");
	    char k5 = 'G';
	    if(k5 >= 'A' && k5 <= 'Z') {
			System.out.println("결과는 대문자");
	    } else if(k5 >= 'a' && k5 <= 'z') {
			System.out.println("결과는 소문자");
	    } else {
			System.out.println("결과는 기타문자");	
	    }
	    
	    //  1 또는 3이면 남자, 아니면 여자
	    System.out.println("k6 ------------");
	    int k6 = 1;
	    str = "여자";
	    if(k6 == 1 || k6 ==3) {
		    str = "남자";
	    }
		System.out.println("결과는 " + str);	 
		
		// 근무시간이 8시간까지는 시간당 8590원이고
		// 8시간을 초과한 시간 만큼은 1.5배 지급한다.
		// 현재 근무한 시간이 10이다.
		// 얼마를 받아야 하는가?
	    System.out.println("근무수당 ------------");
	    int time = 10;
	    int dan = 8590;	    
	    int pay = time * dan;
	    //int dan = 8590;
	    
	    if(time > 8) {
	    	pay = (8 * dan) + (int)((time - 8) * dan * 1.5);
	    }
	    System.out.println("받아야 할 돈은" + pay + " 원 입니다.");
	    
	    // 두 수 중 큰 값을 출력하시오.
	    int k7 = 10;
	    int k8 = 15;
	    int result = 0;
	    
	    if(k7 > k8) {
	    	result = k7;
		    System.out.println("두수 중 큰 수는 " + result + " 입니다.");	    	
	    } else if(k7 < k8) {
	    	result = k8;
		    System.out.println("두수 중 큰 수는 " + result + " 입니다.");	    	
	    } else {
		    System.out.println("두수는 같습니다.");	    
	    }
	}
}
