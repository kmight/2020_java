
public class Ex20 {
	public static void main(String[] args) {
		// 중첩 삼항 연산자 : 삼항연산자가 중첩된 것
		// char k1이 대문자, 소문자, 기타 인지 판별하자
		char k1 = 'G';
		String res = (k1 >= 'A' && k1 <= 'Z') ? "대문자" : (k1 >= 'a' && k1 <= 'z') ? "소문자" : "기타문자" ;
		System.out.println("k1은 " + res + " 입니다.");
		
		// int k2가 90이상이면 A학점, 80이상이면 B학점, 나머지는 F학점
		char k2 = 88;
		String res = (k2 >= 90) ? "A학점" : (k2 >= 80) ? "B학점" : "F학점" ;
		System.out.println("k2는 " + res + " 입니다.");		
	}
}
